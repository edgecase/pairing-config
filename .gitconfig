[user]
  name  = Pairing Machine
  email = pairing@edgecase.com

[color]
  branch = auto
  diff   = auto
  status = auto

[color "branch"]
  current = yellow reverse
  local   = yellow
  remote  = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old  = red bold
  new  = green bold

[color "status"]
  added     = yellow
  changed   = green
  untracked = cyan

[merge]
  tool = opendiff

[core]
  legacyheaders = false
  excludesfile  = /Users/pairing/.gitignore

[repack]
  usedeltabaseoffset = true

[alias]
  br   = branch
  ch   = cherry -v origin
  ci   = commit
  co   = checkout
  df   = diff
  mine = log --author=Pairing
  st   = status

[diff "ruby"]
  funcname = ^ *\\(\\(class\\|module\\|def\\) .*\\)

[push]
  default = matching

[branch "master"]
    remote = origin
    merge  = refs/heads/master

