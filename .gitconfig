[user]
	name = Edgecase Pairing
	email = pairing@edgecase.com

[color]
  branch = auto
  diff   = auto
  status = auto

[color "branch"]
  current = yellow reverse
  local   = yellow
  remote  = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old  = red bold
  new  = green bold

[color "status"]
  added     = yellow
  changed   = green
  untracked = cyan

[merge]
  tool = opendiff

[core]
  legacyheaders = false
  excludesfile  = /Users/pairing/.gitignore
	autocrlf = input
	safecrlf = true

[repack]
  usedeltabaseoffset = true

[alias]
  br   = branch
  ch   = cherry -v origin
  ci   = commit
  co   = checkout
  df   = diff
  mine = log --author=Pairing
  st   = status
  lg   = log --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --graph --abbrev-commit --date=relative  
  put  = "push origin HEAD"
  hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short

[diff "ruby"]
  funcname = ^ *\\(\\(class\\|module\\|def\\) .*\\)

[push]
  default = matching

[branch "master"]
  remote = origin
  merge = refs/heads/master

[git-pair]
  authors = Aaron Christy <aaron@neo.com>
  authors = Aaron Specht Baker <aaron.baker@neo.com>
  authors = Felix Flores <felix@neo.com>
